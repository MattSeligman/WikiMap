<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Profile Page - Wiki Maps</title>

    <%- include('./partials/head'); %>
<body>  
<%- include('./partials/header'); %>
  <div class="maps-heading"> SAVED MAPS </div>
  <div class="map-list-containers">
    <% for (let sav of saved) { %>
    <div class="mini-map-containers">
      <section class="mini-maps">
        <div class="maps-list">
          <img src="<%= sav.header_image %>" alt="map_image" >
          <p class="map-name"><%= sav.name %></p>
          <p class="map-desc"><%= sav.description %></p>
          <div class="icon-container">
            <!-- <span class="wm-icon-flag icon"></span> -->
            <!-- <span class="wm-icon-favorite icon"></span> -->
            <div class="icons">
              <span class="wm-icon-like icon"></span>
              <span class="wm-icon-reply icon"></span>
              <span class="wm-icon-send icon"></span>
            </div>
            <author>@<%= sav.user_id %></author> 
          </div>
        </div>
      </section>
    </div>
    <% } %>
    </div>
  </div>
 

  <div class="maps-heading"> FAV MAPS </div>
    <div class="map-list-containers">
    <% for (let fav of favs) { %>
    <div class="mini-map-containers">
        <section class="mini-maps">
          <div class="maps-list">
            <img src="<%= fav.header_image %>" alt="map_image" >
            <p class="map-name"><%= fav.name %></p>
            <p class="map-desc"><%= fav.description %></p><div class="icon-container">
              <!-- <span class="wm-icon-flag icon"></span> -->
              <!-- <span class="wm-icon-favorite icon"></span> -->
              <div class="icons">
                <span class="wm-icon-like icon"></span>
                <span class="wm-icon-reply icon"></span>
                <span class="wm-icon-send icon"></span>
              </div>
              <author>@<%= fav.user_id %></author> 
            </div>
          </div>
        </section>
    </div>
    <% } %>
    </div>
  </div>
</html>